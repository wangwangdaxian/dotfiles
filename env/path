# Homebrew
export HOMEBREW_BOTTLE_DOMAIN=https://mirrors.tuna.tsinghua.edu.cn/homebrew-bottles
# Java
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_221.jdk/Contents/Home
# Scala
export SCALA_HOME=/usr/local/opt/scala@2.12
export PATH=$PATH:$SCALA_HOME/bin
# Apache
export APACHE_HOME=~/apache
# Hadoop
export HADOOP_HOME=/usr/local/hadoop-2.7.7
export PATH=$PATH:$HADOOP_HOME/bin:$HADOOP_HOME/sbin
# Hive
export HIVE_HOME=/usr/local/hive-2.3.6
export PATH=$PATH:$HIVE_HOME/bin
# Zookeeper
export ZOOKEEPER_HOME=/usr/local/zookeeper-3.5.5
export PATH=$PATH:$ZOOKEEPER_HOME/bin
# Hbase
export HBASE_HOME=/usr/local/hbase-2.1.6
export PATH=$PATH:$HBASE_HOME/bin
# Flink
export FLINK_HOME=/usr/local/flink-1.9.0
export PATH=$PATH:$FLINK_HOME/bin
# Kafka
export KAFKA_HOME=/usr/local/kafka-2.3.0
export PATH=$PATH:$KAFKA_HOME/bin